<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6AED6D6D"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution"
        android:layout_margin="18dp"
        android:text="0"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@+id/result"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_margin="16dp"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@+id/button_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#39000000"
        android:paddingVertical="16dp"
        android:id="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#D4D4D2"
                android:layout_margin="10dp"
                android:id="@+id/button_ac"
                android:text="AC"
                android:layout_weight="2"
                android:onClick="clearaction"
                />



            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#D4D4D2"
                android:layout_margin="10dp"
                android:id="@+id/button_c"
                android:text="C"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF9702"
                android:layout_margin="10dp"
                android:id="@+id/button_divide"
                android:text="/"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_7"
                android:text="7"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_8"
                android:text="8"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_9"
                android:text="9"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF9702"
                android:layout_margin="10dp"
                android:id="@+id/button_multiply"
                android:text="X"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_4"
                android:text="4"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_5"
                android:text="5"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_6"
                android:text="6"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:id="@+id/button_minus"
                android:backgroundTint="#FF9702"
                android:text="-"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_1"
                android:text="1"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_2"
                android:text="2"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_3"
                android:text="3"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:id="@+id/button_plus"
                android:backgroundTint="#FF9702"
                android:text="+"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_0"
                android:layout_weight="2"
                android:text="0"
                android:onClick="numberaction"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#505050"
                android:layout_margin="10dp"
                android:id="@+id/button_point"
                android:text="."
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="40dp"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:id="@+id/button_equal"
                android:backgroundTint="#FF9702"
                android:text="="
                android:onClick="equalaction"
                />




        </LinearLayout>

    </LinearLayout>

</RelativeLayout>